package main;

import java.util.*;

import javax.swing.JOptionPane;

import torneo.*;

public class Main {
	
	public static void main(String[] args) {
		// Generamos TODAS las TenicasEspeciales
	    TecnicaEspecial kamehameha = new TecnicaEspecial("Kamehameha", 300);
	    TecnicaEspecial finalFlash = new TecnicaEspecial("Final Flash", 350);
	    TecnicaEspecial eraserCannon = new TecnicaEspecial("Eraser Cannon", 400);
	    TecnicaEspecial bigBangKamehameha = new TecnicaEspecial("Big Bang Kamehameha", 450);
	    TecnicaEspecial masenko = new TecnicaEspecial("Masenko", 200);
	    TecnicaEspecial makankosappo = new TecnicaEspecial("Makankosappo", 250);
	    TecnicaEspecial kienzan = new TecnicaEspecial("Kienzan", 150);
	    TecnicaEspecial wolfFangFist = new TecnicaEspecial("Wolf Fang Fist", 180);
	    TecnicaEspecial kikoho = new TecnicaEspecial("Kikoho", 220);
	    TecnicaEspecial chocolateBeam = new TecnicaEspecial("Chocolate Beam", 300);
	    TecnicaEspecial kamehamehaRoshi = new TecnicaEspecial("Kamehameha", 300);
	    TecnicaEspecial barreiraDeEnergia = new TecnicaEspecial("Barreira de Energía", 200);
	    TecnicaEspecial powerImpact = new TecnicaEspecial("Power Impact", 250);
	    TecnicaEspecial hakai = new TecnicaEspecial("Hakai", 400);
	    TecnicaEspecial supernova = new TecnicaEspecial("Supernova", 350);
	    TecnicaEspecial agujaDeVeneno = new TecnicaEspecial("Aguja de Veneno", 200);
	    TecnicaEspecial riotJavelin = new TecnicaEspecial("Riot Javelin", 300);
	    TecnicaEspecial finalKamehameha = new TecnicaEspecial("Final Kamehameha", 400);
	    TecnicaEspecial espadaDeTapion = new TecnicaEspecial("Espada de Tapion", 250);
	    TecnicaEspecial hellsFlash = new TecnicaEspecial("Hell's Flash", 300);
	    TecnicaEspecial tiraPiedra = new TecnicaEspecial("TiraPiedra", 50);
	    TecnicaEspecial negativeKarmaBall = new TecnicaEspecial("Negative Karma Ball", 350);
	    TecnicaEspecial dodonpa = new TecnicaEspecial("Dodonpa", 180);
	    TecnicaEspecial bodyChange = new TecnicaEspecial("Body Change", 0);

	    // Generamos TODAS las Transformaciones
	    Transformacion superSaiyajin = new Transformacion("Super Saiyajin", 3, 3);
	    Transformacion superSaiyajinLegendario = new Transformacion("Super Saiyajin Legendario", 4, 4);
	    Transformacion orangePiccolo = new Transformacion("Orange Piccolo", 2.5, 2.5);
	    Transformacion kidBoo = new Transformacion("Kid Boo", 4, 4);
	    Transformacion maxPower = new Transformacion("Max Power", 2.5, 2.5);
	    Transformacion goldenFreezer = new Transformacion("Golden Freezer", 4, 4);
	    Transformacion metaCooler = new Transformacion("Meta-Cooler", 2.5, 2.5);
	    Transformacion formaFinal = new Transformacion("Forma Final", 2.5, 2.5);
	    Transformacion formaPerfecta = new Transformacion("Forma Perfecta", 4, 4);

	    // Generamos TODOS los peleadores
	    Peleador goku = new PeleadorConTransformacion("Goku", 1500, 150, true, true, kamehameha, superSaiyajin);
	    Peleador vegeta = new PeleadorConTransformacion("Vegeta", 1400, 145, true, true, finalFlash, superSaiyajin);
	    Peleador broly = new PeleadorConTransformacion("Broly", 1600, 160, true, true, eraserCannon, superSaiyajinLegendario);
	    Peleador gogeta = new PeleadorConTransformacion("Gogeta", 2000, 155, true, true, bigBangKamehameha, superSaiyajin);
	    Peleador gohan = new PeleadorConTransformacion("Gohan", 1300, 140, true, true, masenko, superSaiyajin);
	    Peleador piccolo = new PeleadorConTransformacion("Piccolo", 1000, 130, true, true, makankosappo, orangePiccolo);
	    Peleador krillin = new PeleadorConTransformacion("Krillin", 1000, 100, true, false, kienzan);
	    Peleador yamcha = new PeleadorConTransformacion("Yamcha", 1000, 95, true, false, wolfFangFist);
	    Peleador tenShinHan = new PeleadorConTransformacion("Ten Shin Han", 1000, 110, true, false, kikoho);
	    Peleador majinBoo = new PeleadorConTransformacion("Majin Boo", 1000, 150, true, true, chocolateBeam, kidBoo);
	    Peleador roshi = new PeleadorConTransformacion("Roshi", 1000, 120, true, true, kamehamehaRoshi, maxPower);
	    Peleador androide17 = new PeleadorConTransformacion("Androide 17", 1100, 130, true, false, barreiraDeEnergia);
	    Peleador androide18 = new PeleadorConTransformacion("Androide 18", 1050, 125, true, false, barreiraDeEnergia);
	    Peleador goten = new PeleadorConTransformacion("Goten", 1000, 130, true, true, kamehameha, superSaiyajin);
	    Peleador trunks = new PeleadorConTransformacion("Trunks", 1000, 135, true, true, new TecnicaEspecial("Burning Attack", 250), superSaiyajin); // TecnicaEspecial para Trunks añadida aquí
	    Peleador jiren = new PeleadorConTecnica("Jiren", 2000, 170, true, false, powerImpact);
	    Peleador toppo = new PeleadorConTecnica("Toppo", 1000, 165, true, true, hakai);
	    Peleador freezer = new PeleadorConTransformacion("Freezer", 1500, 160, true, true, supernova, goldenFreezer);
	    Peleador cooler = new PeleadorConTransformacion("Cooler", 1000, 155, true, true, supernova, metaCooler);
	    Peleador frost = new PeleadorConTransformacion("Frost", 1000, 150, true, true, agujaDeVeneno, formaFinal);
	    Peleador beerus = new PeleadorConTransformacion("Beerus", 1500, 180, true, false, hakai);
	    Peleador bardock = new PeleadorConTransformacion("Bardock", 1000, 140, true, true, riotJavelin, superSaiyajin);
	    Peleador vegito = new PeleadorConTransformacion("Vegetto", 2000, 160, true, true, finalKamehameha, superSaiyajin);
	    Peleador cell = new PeleadorConTransformacion("Cell", 1000, 150, true, true, kamehameha, formaPerfecta);
	    Peleador tapion = new PeleadorConTecnica("Tapion", 1000, 135, true, false, espadaDeTapion);
	    Peleador androide16 = new PeleadorConTransformacion("Androide 16", 1000, 140, true, false, hellsFlash);
	    Peleador mrSatan = new PeleadorConTransformacion("MrSatan", 500, 90, true, false, tiraPiedra);
	    Peleador dragon1Estrella = new PeleadorConTecnica("Dragon de 1 estrella", 1800, 150, true, false, negativeKarmaBall);
	    Peleador taoPaiPai = new PeleadorConTransformacion("Tao Pai Pai", 1000, 110, true, false, dodonpa);
	    Peleador capitanGinyu = new PeleadorConTecnica("Capitán Ginyu", 1000, 120, true, false, bodyChange);

	    //Lista con todos los peleadores disponibles
	    List<Peleador> peleadores = Arrays.asList(
	            goku, vegeta, broly, gogeta, gohan, piccolo, krillin, yamcha, tenShinHan, majinBoo, roshi, androide17, androide18,
	            goten, trunks, jiren, toppo, freezer, cooler, frost, beerus, bardock, vegito, cell, tapion, androide16, mrSatan,
	            dragon1Estrella, taoPaiPai, capitanGinyu);
	    
	    /*-------------------------------------------------------------------------------------------------------------------------*/
	    
	    // Creamos el torneo  
	    Torneo torneo = new Torneo(peleadores);
	    
	    //Interfaz para seleccionar los peleadores
	    torneo.iniciarTorneo(peleadores);
	    
	    
	    
	    //----1era RONDA----
	    torneo.getRondas().get(0).iniciarRonda();
	    //Pasamos los GANADORES a la 2da ronda
	    torneo.pasarSiguienteRonda(torneo.getRondas().get(0).getGanadores(), 1);
	    
	    
	    
	    //----2da RONDA----
	    Torneo.mostrarGanadoresRonda(torneo.getRondas().get(1).getPeleadores(), 2);
	    //Iniciamos
	    Torneo.sortearCombates(torneo.getRondas().get(1), 2);
	    torneo.getRondas().get(1).iniciarRonda();
	    //Pasamos los GANADORES a la 3era ronda
	    torneo.pasarSiguienteRonda(torneo.getRondas().get(1).getGanadores(), 2);
	    
	    
	    
	    //----3era RONDA----
	    Torneo.mostrarGanadoresRonda(torneo.getRondas().get(2).getPeleadores(), 3);
	    //Iniciamos
	    Torneo.sortearCombates(torneo.getRondas().get(2), 3);
	    torneo.getRondas().get(2).iniciarRonda();
	    //Pasamos los GANADORES a la 4ta ronda
	    torneo.pasarSiguienteRonda(torneo.getRondas().get(2).getGanadores(), 3);
	    
	    
	    
	    //----4ta RONDA (ultima)----
	    Torneo.mostrarGanadoresRonda(torneo.getRondas().get(3).getPeleadores(), 4);
	    Torneo.sortearCombates(torneo.getRondas().get(3), 4);
	    torneo.getRondas().get(3).iniciarRonda();
	    torneo.setGanador(torneo.getRondas().get(3).getGanadores().get(0));
	    
	    //Mostramos el GANADOR DEL TORNEO
	    JOptionPane.showMessageDialog(null, "El ganador del Torneo de Artes Marciales es:\n\n *****" 
	    + torneo.getGanador().getNombre() + "*****");
	}

	
}
