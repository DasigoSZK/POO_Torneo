package main;

import java.util.*;
import torneo.*;

public class Main {
	
	public static void main(String[] args) {
		// Generamos TODAS las TenicasEspeciales
	    TecnicaEspecial kamehameha = new TecnicaEspecial("Kamehameha", 300);
	    TecnicaEspecial finalFlash = new TecnicaEspecial("Final Flash", 350);
	    TecnicaEspecial eraserCannon = new TecnicaEspecial("Eraser Cannon", 400);
	    TecnicaEspecial bigBangKamehameha = new TecnicaEspecial("Big Bang Kamehameha", 450);
	    TecnicaEspecial masenko = new TecnicaEspecial("Masenko", 200);
	    TecnicaEspecial makankosappo = new TecnicaEspecial("Makankosappo", 250);
	    TecnicaEspecial kienzan = new TecnicaEspecial("Kienzan", 150);
	    TecnicaEspecial wolfFangFist = new TecnicaEspecial("Wolf Fang Fist", 180);
	    TecnicaEspecial kikoho = new TecnicaEspecial("Kikoho", 220);
	    TecnicaEspecial chocolateBeam = new TecnicaEspecial("Chocolate Beam", 300);
	    TecnicaEspecial kamehamehaRoshi = new TecnicaEspecial("Kamehameha", 300);
	    TecnicaEspecial barreiraDeEnergia = new TecnicaEspecial("Barreira de Energía", 200);
	    TecnicaEspecial powerImpact = new TecnicaEspecial("Power Impact", 250);
	    TecnicaEspecial hakai = new TecnicaEspecial("Hakai", 400);
	    TecnicaEspecial supernova = new TecnicaEspecial("Supernova", 350);
	    TecnicaEspecial agujaDeVeneno = new TecnicaEspecial("Aguja de Veneno", 200);
	    TecnicaEspecial riotJavelin = new TecnicaEspecial("Riot Javelin", 300);
	    TecnicaEspecial finalKamehameha = new TecnicaEspecial("Final Kamehameha", 400);
	    TecnicaEspecial espadaDeTapion = new TecnicaEspecial("Espada de Tapion", 250);
	    TecnicaEspecial hellsFlash = new TecnicaEspecial("Hell's Flash", 300);
	    TecnicaEspecial tiraPiedra = new TecnicaEspecial("TiraPiedra", 50);
	    TecnicaEspecial negativeKarmaBall = new TecnicaEspecial("Negative Karma Ball", 350);
	    TecnicaEspecial dodonpa = new TecnicaEspecial("Dodonpa", 180);
	    TecnicaEspecial bodyChange = new TecnicaEspecial("Body Change", 0);

	    // Generamos TODAS las Transformaciones
	    Transformacion superSaiyajin = new Transformacion("Super Saiyajin", 3, 3);
	    Transformacion superSaiyajinLegendario = new Transformacion("Super Saiyajin Legendario", 4, 4);
	    Transformacion orangePiccolo = new Transformacion("Orange Piccolo", 3.5, 3.5);
	    Transformacion kidBoo = new Transformacion("Kid Boo", 5, 5);
	    Transformacion maxPower = new Transformacion("Max Power", 2.5, 2.5);
	    Transformacion goldenFreezer = new Transformacion("Golden Freezer", 4, 4);
	    Transformacion metaCooler = new Transformacion("Meta-Cooler", 3.5, 3.5);
	    Transformacion formaFinal = new Transformacion("Forma Final", 3, 3);
	    Transformacion formaPerfecta = new Transformacion("Forma Perfecta", 4, 4);

	    // Generamos TODOS los peleadores
	    Peleador goku = new Saiyajin("Goku", 1500, 150, true, true, kamehameha, superSaiyajin);
	    Peleador vegeta = new Saiyajin("Vegeta", 1400, 145, true, true, finalFlash, superSaiyajin);
	    Peleador broly = new Saiyajin("Broly", 1800, 160, true, true, eraserCannon, superSaiyajinLegendario);
	    Peleador gogeta = new Saiyajin("Gogeta", 1600, 155, true, true, bigBangKamehameha, superSaiyajin);
	    Peleador gohan = new Saiyajin("Gohan", 1300, 140, true, true, masenko, superSaiyajin);
	    Peleador piccolo = new Namekiano("Piccolo", 1200, 130, true, true, makankosappo, orangePiccolo);
	    Peleador krillin = new Humano("Krillin", 900, 100, true, false, kienzan);
	    Peleador yamcha = new Humano("Yamcha", 850, 95, true, false, wolfFangFist);
	    Peleador tenShinHan = new Humano("Ten Shin Han", 950, 110, true, false, kikoho);
	    Peleador majinBoo = new Majin("Majin Boo", 1600, 150, true, true, chocolateBeam, kidBoo);
	    Peleador roshi = new Humano("Roshi", 1000, 120, true, true, kamehamehaRoshi, maxPower);
	    Peleador androide17 = new Androide("Androide 17", 1100, 130, true, false, barreiraDeEnergia);
	    Peleador androide18 = new Androide("Androide 18", 1050, 125, true, false, barreiraDeEnergia);
	    Peleador goten = new Saiyajin("Goten", 1200, 130, true, true, kamehameha, superSaiyajin);
	    Peleador trunks = new Saiyajin("Trunks", 1250, 135, true, true, new TecnicaEspecial("Burning Attack", 250), superSaiyajin); // TecnicaEspecial para Trunks añadida aquí
	    Peleador jiren = new Alienigena("Jiren", 1800, 170, true, false, powerImpact);
	    Peleador toppo = new Alienigena("Toppo", 1750, 165, true, true, hakai);
	    Peleador freezer = new FrostDemon("Freezer", 1700, 160, true, true, supernova, goldenFreezer);
	    Peleador cooler = new FrostDemon("Cooler", 1650, 155, true, true, supernova, metaCooler);
	    Peleador frost = new FrostDemon("Frost", 1600, 150, true, true, agujaDeVeneno, formaFinal);
	    Peleador beerus = new DiosDeLaDestruccion("Beerus", 1900, 180, true, false, hakai);
	    Peleador bardock = new Saiyajin("Bardock", 1300, 140, true, true, riotJavelin, superSaiyajin);
	    Peleador vegito = new Saiyajin("Vegetto", 1700, 160, true, true, finalKamehameha, superSaiyajin);
	    Peleador cell = new Androide("Cell", 1500, 150, true, true, kamehameha, formaPerfecta);
	    Peleador tapion = new Alienigena("Tapion", 1250, 135, true, false, espadaDeTapion);
	    Peleador androide16 = new Androide("Androide 16", 1300, 140, true, false, hellsFlash);
	    Peleador mrSatan = new Humano("MrSatan", 800, 90, true, false, tiraPiedra);
	    Peleador dragon1Estrella = new Alienigena("Dragon de 1 estrella", 1600, 150, true, false, negativeKarmaBall);
	    Peleador taoPaiPai = new Namekiano("Tao Pai Pai", 950, 110, true, false, dodonpa);
	    Peleador capitanGinyu = new Alienigena("Capitán Ginyu", 1000, 120, true, false, bodyChange);

	    //Lista con todos los peleadores disponibles
	    List<Peleador> peleadores = Arrays.asList(
	            goku, vegeta, broly, gogeta, gohan, piccolo, krillin, yamcha, tenShinHan, majinBoo, roshi, androide17, androide18,
	            goten, trunks, jiren, toppo, freezer, cooler, frost, beerus, bardock, vegito, cell, tapion, androide16, mrSatan,
	            dragon1Estrella, taoPaiPai, capitanGinyu);
	    
	    /*-------------------------------------------------------------------------------------------------------------------------*/
	    
	    // Creamos el torneo  
	    Torneo torneo = new Torneo(peleadores);
	    
	    //Interfaz para seleccionar los peleadores
	    torneo.iniciarTorneo(peleadores);
	    
	    
	    
	    //1era RONDA
	    for(int i=0; i<torneo.getRondas().get(0).getPeleadores().size(); i+=2) {
	    	//ronda
	    	Ronda ronda1 = torneo.getRondas().get(0);
	    	//peleadores
	    	Peleador peleador1 = torneo.getRondas().get(0).getPeleadores().get(i);
	    	Peleador peleador2 = torneo.getRondas().get(0).getPeleadores().get(i+1);
	    	
	    	//Ejecutamos pelea
	    	Peleador[] resultados = peleador1.pelear(peleador2);
	    	
	    	//Guardamos los ganadores y perdedores de la pelea
	    	ronda1.getGanadores().add(resultados[0]);
	    	ronda1.getPerdedores().add(resultados[1]);
	    }
	    
	    //Pasamos los GANADORES a la 2da ronda
	    torneo.pasarSiguienteRonda(torneo.getRondas().get(0).getGanadores(), 1);
	    
	    
	    
	    //2da RONDA
	}

	
}
